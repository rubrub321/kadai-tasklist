<header class="mb-4">
  <nav class="navbar navbar-expand-sm navbar-dark bg-dark">
    <a class="navbar-brand" href="/">Tasklist</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
      <ul class="navbar-nav">
        <% if logged_in? %>
          <li class="nav-item mr-3"><%= link_to current_user.name, tasks_path %></li>
          <li class="nav-item"><%= link_to 'Logout', logout_path, method: :delete %></li>
        <% else %>
          <li class="nav-item mr-3"><%= link_to 'Signup', new_user_path %></li>
          <li class="nav-item"><%= link_to 'Login', login_path %></li>
        <% end %>
      </ul>
    </div>
  </nav>
</header>